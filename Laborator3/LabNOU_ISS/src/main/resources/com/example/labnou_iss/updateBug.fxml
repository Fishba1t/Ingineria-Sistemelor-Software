<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.labnou_iss.controller.UpdateBugController">
    <children>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Update Bug" styleClass="heading" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

            <Label text="Bug ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="bugIdField" GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false"/>

            <Label text="New Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="New Description:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="descriptionField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Button text="UPDATE" onAction="#updateBug" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="update-button"/>
        </GridPane>
    </children>
</VBox>
